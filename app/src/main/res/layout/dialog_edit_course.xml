<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/edit_course_dialog_banner"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent" />

    <TextView
        android:id="@+id/edit_course_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:gravity="left|center_vertical"
        android:text="Edit Course"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_course_dialog_banner"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/edit_course_dialog_label_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Start Date: "
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_course_dialog_et_start_date"
        app:layout_constraintBottom_toBottomOf="@+id/edit_course_dialog_et_start_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_course_dialog_et_start_date" />

    <EditText
        android:id="@+id/edit_course_dialog_et_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="01-Jul-2018"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edit_course_dialog_label_start_date"
        app:layout_constraintTop_toBottomOf="@+id/edit_course_dialog_banner" />

    <TextView
        android:id="@+id/edit_course_dialog_label_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="End Date: "
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_course_dialog_et_end_date"
        app:layout_constraintBottom_toBottomOf="@+id/edit_course_dialog_et_end_date"

        app:layout_constraintEnd_toEndOf="@+id/edit_course_dialog_label_start_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_course_dialog_label_start_date"
        app:layout_constraintTop_toTopOf="@+id/edit_course_dialog_et_end_date" />

    <EditText
        android:id="@+id/edit_course_dialog_et_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="31-Jul-2018"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintEnd_toEndOf="@+id/edit_course_dialog_et_start_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_course_dialog_et_start_date"
        app:layout_constraintTop_toBottomOf="@+id/edit_course_dialog_et_start_date" />

    <Button
        android:id="@+id/edit_course_dialog_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_course_dialog_btn_cancel"
        app:layout_constraintTop_toBottomOf="@+id/edit_course_dialog_et_end_date"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/edit_course_dialog_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="@+id/edit_course_dialog_btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_course_dialog_btn_save" />

</android.support.constraint.ConstraintLayout>