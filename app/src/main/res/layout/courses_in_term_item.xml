<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/courses_in_term_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            app:srcCompat="@drawable/wgu_logo" />

        <TextView
            android:id="@+id/courses_in_term_crse_designator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/courses_in_term_imageView"
            android:text="C101"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courses_in_term_crse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courses_in_term_crse_designator"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/courses_in_term_imageView"
            android:text="Intro to Computers"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/courses_in_term_crse_cus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:text="3 CUs"
            android:textSize="20sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>