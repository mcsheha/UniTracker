<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/course_mentor_item_image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person" />

        <TextView
            android:id="@+id/course_mentor_item_text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joyce Dahlhauser"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/course_mentor_item_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/course_mentor_item_text_view_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="joyce@wgu.edu"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/course_mentor_item_image_view"
            app:layout_constraintTop_toBottomOf="@+id/course_mentor_item_text_view_name" />

        <TextView
            android:id="@+id/course_mentor_item_text_view_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555-555-1212"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/course_mentor_item_text_view_email"
            app:layout_constraintTop_toBottomOf="@+id/course_mentor_item_text_view_email" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>